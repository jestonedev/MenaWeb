@using MenaWeb.ViewModels
@using MenaWeb.Models.Entities
@using MenaWeb.DataServices
@using MenaWeb.Extensions

@model DocumentIssuedVM<DocumentIssued>;

@{
    ViewData["Title"] = "Паспортные столы (" + Model.PageOptions.Rows + ")";
}


@section scripts
    {
<script src="~/js/documentIssue.js"></script>
}

<h2>@ViewData["Title"]</h2>
<form class="formsub" method="get" asp-controller="DocumentIssued" asp-action="Index" id="r-docissuer-form" data-action="@ViewBag.Action">
    <input type="hidden" asp-for="PageOptions.CurrentPage" />
    <input type="hidden" asp-for="PageOptions.SizePage" />
    <a class="btn btn-success mb-3" title="Добавить" aria-label="Добавить новый паспортный стол" asp-controller="DocumentIssued" asp-action="Create">+</a>
</form>
<table class="table table-hover" id="searchDocIssue">
    <thead>
        <tr>
            <th>Наименование</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DocumentIssueds)
        {
            <tr>
                <td>@item.DocumentIssuedName</td>
                <td class="text-right">
                    <div class="btn-group">
                        <a class="btn btn-outline-dark oi oi-pencil" title="Изменить" aria-label="Изменить"
                           asp-controller="DocumentIssued" asp-action="Edit" asp-route-idDocumentIssue="@item.IdDocumentIssued"></a>
                        <a class="btn btn-danger oi oi-x" title="Удалить" aria-label="Удалить"
                           asp-controller="DocumentIssued" asp-action="Delete" asp-route-idDocumentIssue="@item.IdDocumentIssued"></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<page-link page-model="Model.PageOptions" page-action="Index"></page-link>


